@page
@model EspersModel

<table class="table">
    <thead>
        <tr>
            <th>
                Уровень достоверности
            </th>
            <th>
                Текущее предположение
            </th>
            <th>
                Имя экстрасенса
            </th>
            <th>
                История угаданных чисел
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.espers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.reliabilityLevel)
                </td>
                <td>
                    @if(item.currentGuess != -1) @Html.DisplayFor(modelItem => item.currentGuess)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                @foreach (var numb in item.guessedNumbers)
                {
                    <td>
                        @Html.DisplayFor(modelItem => numb)
                    </td>
                }
            </tr>
        }
        <tr>
            
            <td>          
             </td>             
            <td>          
             </td>
            <th>
                Ранее загаданные числа
            </th>           
            @foreach (var numb in @Model.tester.numbHistory)
            {
                <td>
                    @Html.DisplayFor(modelItem => numb)
                </td>
            }
        </tr>
    </tbody>
</table>

<br />
@if (@Model.pageState == 1)
{
<br />
<label>Загадайте двузначное число</label><br />
<form asp-page-handler="guess" method="post">
    <input type="submit" value="Загадать число" />
</form>
}
else if (@Model.pageState == 2)
{
<br />
<form asp-page-handler="unveil" method="post">
    <label for="SubmittedNumb">Загаданное число</label><br />
    <input type="number" name="SubmittedNumb" id="SubmittedNumb" />
    @Html.ValidationMessageFor(model => model.SubmittedNumb)<br /><br />
    <input type="submit" value="Оправить загаданное число" />
</form>
}